.panel-holder {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  visibility: visible;
  opacity: 1;
  transition: 0.5s;
}

.panel-hidden {
  visibility: hidden;
  opacity: 0;
  transition: 0.5s;
}

.panel {
  display: flex;
  flex-direction: column;
  width: 80vw;
  margin-left: auto;
  margin-right: auto;
  border-radius: 5rpx;
  background-color: #ffffff;
}

.panel-text-holder {
  max-height: 60vh;
}

.panel-button-holder {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}