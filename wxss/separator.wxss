.subseparator {
  height: 2rpx;
  background-color: #e1e1e1;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.separator {
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  position: relative;
  background-image: url('https://image.potatofield.cn/image/20190124/jHUgl7DfCb4F.png');
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.separator::before {
  content: '';
  width: 42%;
  height: 2rpx;
  position: absolute;
  background-color: #e1e1e1;
  left: 0;
  top: 29rpx;
}

.separator::after {
  content: '';
  width: 42%;
  height: 2rpx;
  position: absolute;
  background-color: #e1e1e1;
  right: 0;
  top: 29rpx;
}